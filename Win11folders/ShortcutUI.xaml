<UserControl x:Class="Win11folders.ShortcutUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Background="Transparent" Width="128" Height="128"
             Name="Shortcut" AllowDrop="True" MouseUp="ShortcutUI_OnMouseUp"
             MouseDown="ShortcutUI_OnMouseDown" MouseLeave="ShortcutUI_OnMouseLeave"
             Drop="ShortcutUI_OnDrop" DragOver="ShortcutUI_OnDragOver" 
             DragLeave="ShortcutUI_OnDragLeave">
    <Grid>
        <Border Name="Border" BorderBrush="Black"></Border>
        <TextBlock Name="ProgramName" TextAlignment="Center" TextWrapping="Wrap"></TextBlock>
        <Image Name="ProgramIcon" RenderOptions.BitmapScalingMode="HighQuality"
               RenderOptions.EdgeMode="Aliased"></Image>
    </Grid>
</UserControl>
